import java.util.Scanner;
/**
 * 
 *WAP To Replace A String From The Given String And Then Print
 */
public class NameReplacement {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String username,new_username;
		
		Scanner n = new Scanner(System.in);
		System.out.println("Enter username:");
		username = n.nextLine();
		System.out.print("Before Replacement:  ");
		String str = new String("Hello " + username + ",How are you?");
		System.out.println(str);
		System.out.println("Enter new Username:");
		new_username = n.nextLine();
		String str1 = str.replaceAll(username, new_username);
		System.out.println("After Replacement:  "+str1);
		n.close();
		
	}

}
