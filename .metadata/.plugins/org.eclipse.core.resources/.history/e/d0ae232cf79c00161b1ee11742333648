import java.util.Random;
import java.util.Scanner;
/*Cross Game or Tic-Tac-Toe Game 

Desc -> Write a Program to play a Cross Game or Tic-Tac-Toe Game. 
        Player 1 is the Computer and the Player 2 is the user. 
        Player 1 take Random Cell that is the Column and Row. 
I/P -> Take User Input for the Cell i.e. Col and Row to Mark the ‘X’
Logic -> The User or the Computer can only take the unoccupied cell. 
         The Game is played till either wins or till draw...
O/P -> Print the Col and the Cell after every step.
Hint -> The Hints is provided in the Logic. Use Functions for the Logic...
*/
public class CrossGame {
	
	protected static int getRandomNumberInRange(int min, int max) {

		Random r = new Random();
		return r.nextInt((max - min) + 1) + min;
	}
	
	public static void computer(char comchoice)
	{	
		int max = 2;
		int min = 0;
		boolean flag = true;
		
		int rows=getRandomNumberInRange(min, max);
		int cols=getRandomNumberInRange(min, max);
		
		flag = chkCondition(rows,cols);
		if(flag)
		{
			//print
		}
		else
			computer(comchoice);
	}
	public static void user()
	{ 
		int rows = 0;
		int cols = 0;
		boolean flag = true;
		
		flag = chkCondition(rows,cols);
		if(flag)
		{
			//print
		}
		else
			user();
		
	}
	public static void testWinCondition(char[][] cross)
	{
		int x=0;
		if( x ==1)
		System.out.println("User won this round");
		else
		System.out.println("Computer won this round");
	}
	public static boolean chkCondition(int m, int n)
	{
		boolean flag= true;
		
				return flag;
	}
		
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner n = new Scanner(System.in);
		char choice;
		char  comchoice;
		char[][] cross= new char[3][3];
		System.out.println("Choose between 'X' and 'O':");
		choice = n.next().charAt(0);
		if(choice == 'X')
			comchoice = 'O';
		else 
			comchoice = 'X';
		System.out.println("User chooses :" + choice);
		for(int i = 0;i<9;i++ )
		{
			if(i==0 || i%2 == 0)
			computer(comchoice);
			else
			user();
		}
			testWinCondition(cross);
		
		n.close();
	}

}
